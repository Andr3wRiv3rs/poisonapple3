html( lang="en" )
  head
    meta( charset="UTF-8" )
    meta( name="viewport" content="width=device-width, initial-scale=1.0" )
    
    base( href="/" )

    link( rel="icon" href="/favicon.ico" )

    link( rel="preload" href=require('@/assets/fonts/manrope.woff2') as="font" type="font/woff2" crossorigin )
    link( rel="preload" href=require('@/assets/fonts/manrope-bold.woff2') as="font" type="font/woff2" crossorigin )

    link( rel="preload" href=require('@/assets/background.webp') as="image" )

    //- each image in require('@/assets/gallery').default
    //-   link( rel="prefetch" href=require("@/assets/gallery/" + image) as="image" )

    each project in Object.values(require('@/assets/projects').default)
      link( rel="prefetch" href=require("@/assets/projects/" + project.thumbnail) as="image" )

    meta( name="theme-color" content=require('config').meta.themeColor )

    meta( property="og:url" content=require('config').meta.url )

    meta( name="twitter:image:src" content=require('config').meta.thumbnail )        
    meta( property="og:image" content=require('config').meta.thumbnail )
    meta( name="twitter:card" content="summary_large_image" )

    meta( property="og:type" content="object" )

    meta( property="og:description" name="description" content=require('config').meta.description )
    meta( name="twitter:description" content=require('config').meta.description )

    meta( name="twitter:site" content=require('config').meta.title )
    meta( property="og:title" content=require('config').meta.title )
    meta( name="twitter:title" content=require('config').meta.title )
    meta( property="og:site_name" content=require('config').meta.title )

    title #{ require('config').meta.title }
    
  body
    noscript
      strong Sorry, but this website doesn't work properly without JavaScript enabled. Please enable it to continue.